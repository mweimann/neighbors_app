<div class="page-header">
  <h1>Tools</h1>
</div>

<p><%= link_to("Add a New Tool", "/tools/new", :class => "btn btn-primary") %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Tool name</th>
      <th>User</th>
      <th>Available</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tools.each do |tool| %>
      <tr>
        <td><%= tool.tool_name %></td>
        <td><%= tool.user_id %></td>
        <td>
          <%= link_to("<i class=\"fa fa-search-plus\"></i>".html_safe,
                      tool_url(tool),
                      :class => "btn btn-primary") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-edit\"></i>".html_safe,
                      edit_tool_url(tool),
                      :class => "btn btn-warning") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-trash-o\"></i>".html_safe,
                      delete_tool_url(tool),
                      :class => "btn btn-danger",
                      :method => "delete",
                      :data => { :confirm => "Are you sure?"} )%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

