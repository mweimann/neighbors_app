<div class="page-header">
  <h1>Add Tool</h1>
</div>

<% if @tool.errors.any? %>
  <% @tool.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_for @tool, url: {action: "create"}, html: {class: "form-horizontal"} do %>
  <div class="form-group">
    <%= label_tag(:tool_name, "Tool name", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:tool_name, nil, placeholder: "Tool name", :class => "form-control") %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-10">
     <%= hidden_field_tag :available, "1" %>
     <%= hidden_field_tag :user_id, current_user.id %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Add this tool", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
