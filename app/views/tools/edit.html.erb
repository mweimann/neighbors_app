<div class="page-header">
  <h1>Edit Tool #<%= @tool.id %></h1>
</div>

<% if @tool.errors.any? %>
  <% @tool.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_tag("/update_tool/#{@tool.id}", :class => "form-horizontal") do %>

  <div class="form-group">
    <%= label_tag(:tool_name, "Tool name", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:tool_name, "#{@tool.tool_name}", {:class => "form-control"}) %>
    </div>
  </div>

  <!-- Label and input for user_id -->
  <div class="form-group">
    <%= label_tag(:user_id, "Owner", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:user_id, "#{@tool.user_id}", {:class => "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <%= label_tag(:available, "Available") %>
        <input type="checkbox" id="available" name="available" value="1" <%= "checked" if @tool.available %>>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Update Tool", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
