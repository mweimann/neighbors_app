<div class="page-header">
  <h1>Add Membership</h1>
</div>

<% if @membership.errors.any? %>
  <% @membership.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_for @membership, url: {action: "create"}, html: {class: "form-horizontal"} do %>
  <div class="form-group">
    <%= label_tag(:group_id, "Group", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:group_id, "#{@membership.group_id}", {:class => "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag(:user_id, "User", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:user_id, "#{@membership.user_id}", {:class => "form-control"}) %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Create Membership", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
