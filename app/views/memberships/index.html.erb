<div class="page-header">
  <h1>Memberships</h1>
</div>


<p><%= link_to("Add a New Membership", "/memberships/new", :class => "btn btn-primary") %></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Group</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.group_id %></td>
        <td><%= membership.user_id %></td>
        <td>
          <%= link_to("<i class=\"fa fa-search-plus\"></i>".html_safe, "/memberships/#{membership.id}", :class => "btn btn-primary") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-edit\"></i>".html_safe, "/memberships/#{membership.id}/edit", :class => "btn btn-warning") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-trash-o\"></i>".html_safe, "/delete_membership/#{membership.id}", :class => "btn btn-danger") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

