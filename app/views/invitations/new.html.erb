<div class="page-header">
  <h1>Invite a Neighbor</h1>
</div>

<% if @invitation.errors.any? %>
  <% @invitation.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<%= form_for @invitation, url: {action: "create"}, html: {class: "form-horizontal"} do %>
  <div class="form-group">
    <%= label_tag(:recipient_email, "Neighbor's email", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:recipient_email, "#{@invitation.recipient_email}", {:class => "form-control"}) %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-10">
      <%= hidden_field_tag :sender_id, "#{current_user.id}" %>
    </div>
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Send Invitation", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
