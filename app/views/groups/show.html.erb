<div class="page-header">
  <div class="row">
    <h1><%= @group.group_name%></h1>
  </div>
</div>
<div class="row">
    <!-- <h5>Members</h5> -->
    <% @group.members.each do |member| %>
      <div class="col-sm-2">
        <h4><%= link_to(member.username, "/users/#{member.id}") %></h4>
      </div>
      <div class="col-sm-10">
        <ul class="list-group">
          <% member.tools.each do |tool| %>
            <li class="list-group-item"><%= link_to(tool.tool_name, "/tools/#{tool.id}") %>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>
<div>
  <input type="hidden" name="group_id" value="<%= @group.id %>">
  <%= link_to 'Invite a neighbor to this group', "/invitations/new" %>
</div>

