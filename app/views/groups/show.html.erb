<div class="page-header">
  <div class="row">
    <h1><%= @group.group_name%></h1>
    <form action="/create_membership" class="form-horizontal">
    <% if current_user.id == @group.creator_id %>
        <label for="Users">Add a user to this group</label>
          <select name="user_id" id="user">
            <% @members.each do |user| %>
              <option value="<%= user.id %>"><%= user.username %></option>
            <% end %>
          </select>
          <input type="hidden" name="group_id" value="<%= @group.id %>">
          <button class="btn btn-default" action="post">Submit</button>
    <% end %>
  </div>
</div>
<div class="row">
    <!-- <h5>Members</h5> -->
    <% @group.members.each do |member| %>
      <div class="col-sm-2">
        <h4><a href="/users/<%= member.id %>"><%= member.username %></a></h4>
        <a href="<%= member.email %>"> <%= member.email %></a>
      </div>
      <div class="col-sm-10">
        <ul class="list-group">
          <% member.tools.each do |tool| %>
            <li class="list-group-item"><a href="/tools/<%= tool.id %>"><%= tool.tool_name %></a></li>
          <% end %>
        </ul>
      </div>
    <% end %>
</div>

