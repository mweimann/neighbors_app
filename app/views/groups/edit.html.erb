<div class="page-header">
  <h1>Edit Group #<%= @group.id %></h1>
</div>

<% if @group.errors.any? %>
  <% @group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<form action="/update_group/<%= @group.id %>" class="form-horizontal">
  <!-- Label and input for group_name -->
  <div class="form-group">
    <label for="group_name" class="col-sm-2 control-label">
      Group name
    </label>
    <div class="col-sm-10">
      <input type="text" id="group_name" name="group_name" placeholder="Group name" class="form-control" value="<%= @group.group_name %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Group" class="btn btn-primary">
    </div>
  </div>
</form>
