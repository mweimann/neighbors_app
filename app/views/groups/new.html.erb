<div class="page-header">
  <h1>Add Group</h1>
</div>

<% if @group.errors.any? %>
  <% @group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>


<form action="/create_group" class="form-horizontal">
  <!-- Label and input for group_name -->
  <div class="form-group">
    <label for="group_name" class="col-sm-2 control-label">
      Group name
    </label>
    <div class="col-sm-10">
      <input type="text" id="group_name" name="group_name" placeholder="Group name" class="form-control" value="<%= @group.group_name %>">
      <input type="hidden" id="creator_id" name="creator_id" value="<%= current_user.id %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Group" class="btn btn-primary">
    </div>
  </div>
</form>
