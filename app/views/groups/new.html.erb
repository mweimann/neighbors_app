<div class="page-header">
  <h1>Add Group</h1>
</div>

<% if @group.errors.any? %>
  <% @group.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>



<%= form_tag("/create_group", :class => "form-horizontal") do %>
  <!-- Label and input for group_name -->
  <div class="form-group">
    <%= label_tag(:group_name, "Group Name", :class => "col-sm-2 control-label") %>
    <div class="col-sm-10">
      <%= text_field_tag(:group_name, @group.group_name, {:class => "form-control"}) %>
      <%= hidden_field_tag :creator_id, current_user.id %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Create Group", :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
