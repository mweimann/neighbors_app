<div class="page-header">
  <h1>Groups</h1>
</div>

<%= link_to("Add a New Group", "/groups/new", :class => "btn btn-primary" ) %>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Group name</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @groups.each do |group| %>
      <tr>
        <td><%= group.group_name %></td>
        <td>
          <%= link_to("<i class=\"fa fa-search-plus\"></i>".html_safe,
                      group_url(group),
                      :class => "btn btn-primary") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-edit\"></i>".html_safe,
                      edit_group_url(group),
                      :class => "btn btn-warning") %>
        </td>
        <td>
          <%= link_to("<i class=\"fa fa-trash-o\"></i>".html_safe,
                      delete_group_url(group),
                      :class => "btn btn-danger",
                      :method => "delete",
                      :data => { :confirm => "Are you sure?"} ) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

